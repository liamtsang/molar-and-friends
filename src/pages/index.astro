---
import Layout from "../layouts/Layout.astro";
import Hero from "../components/Hero.astro";
import LeftCard from "../components/LeftCard.astro";
import RightCard from "../components/RightCard.astro";
import CTAButton from "../components/CTAButton.astro";
---

<Layout>
	<Hero />
	<div class="bg-gradient-to-b from-minty to-minty to-80%">
		<section class="flex flex-col items-center w-[calc((6/7)*100%)] md:w-[calc((5/7)*100%)] max-w-[1024px] mx-auto gap-12 md:space-y-24 mt-10 md:mt-24">
			<LeftCard/>
			<RightCard/>
			<CTAButton/>
		  </section>
	</div>
</Layout>
