 <div class="w-full z-[1] relative pt-16 md:pt-32">
  <div class="h-fit text-teal w-[calc((6/7)*100%)] md:w-[calc((5/7)*100%)] max-w-[1024px] mx-auto space-y-4 md:space-y-8">
   <h1 id="heroh1" class="drop-shadow-sm heading-1 min-w-[95vw]">Let's grow healthy<br/>smiles together!</h1>
   <p id="herop" class="drop-shadow-sm font-semibold max-w-xs md:max-w-lg">From our family to yours, Dr. George and Dr. Chloe are passionate about caring for your child's unique oral health needs.</p>
  </div>
 </div>
 <img class="pt-16 w-full h-fit object-cover object-right" src="/hero_transparent.svg"/>
</section>
<script>
import { animate, inView } from "motion";

inView("#heroh1", (e) => {
  animate("#heroh1", { opacity:[0,1],x:[-500,0],skew:[30,0]}, {duration: 0.75})
  animate("#herop", { opacity:[0,0,1],rotateX:[90,90,0]}, {duration: 1.5})
})
</script>

